apiVersion: v1
kind: ConfigMap
metadata:
  name: aws-auth
  namespace: kube-system
data:
  mapRoles: |
%{ for arn in eks_node_role_arns ~}
    - rolearn: ${arn}
      username: system:node:{{EC2PrivateDNSName}}
      groups:
        - system:bootstrappers
        - system:nodes
        %{ if nodes_master }- system:masters%{ endif }
%{ endfor ~}
%{ for role, arn in eks_master_role_arns ~}
    - rolearn: ${arn}
      username: ${role}
      groups:
        - system:masters
%{ endfor ~}
%{ for rolemap in eks_custom_role_maps ~}
    - ${jsonencode(rolemap)}
%{ endfor ~}
