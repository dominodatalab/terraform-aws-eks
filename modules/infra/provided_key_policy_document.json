{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "AllowUseOfProvidedKMSKey",
            "Effect": "Allow",
            "Action": [
                "kms:Encrypt",
                "kms:Decrypt",
                "kms:ReEncrypt*",
                "kms:GenerateDataKey*",
                "kms:DescribeKey",
                "kms:CreateGrant"
            ],
            "Resource": "${kms_key_arn}"
        }
    ]
}
