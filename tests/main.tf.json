{
  "data": [
    {
      "aws_ami": {
        "eks_node": {
          "provider": "aws.local",
          "most_recent": true,
          "owners": ["amazon"],
          "filter": [
            {
              "name": "name",
              "values": ["amazon-eks-node-${var.k8s_version}-*"]
            }
          ]
        }
      }
    }
  ],
  "module": [
    {
      "domino_eks": {
        "source": "./..",
        "deploy_id": "${var.deploy_id}",
        "region": "${var.region}",
        "number_of_azs": 2,
        "k8s_version": "${var.k8s_version}",
        "route53_hosted_zone_name": "deploys-delta.domino.tech",
        "eks_master_role_names": ["okta-poweruser", "okta-fulladmin"],
        "s3_force_destroy_on_deletion": true,
        "ecr_force_destroy_on_deletion": true,
        "bastion": {},
        "ssh_pvt_key_path": "domino.pem",
        "tags": "${var.tags}",
        "default_node_groups": {
          "compute": {
            "spot": true,
            "ami": "${data.aws_ami.eks_node.image_id}"
          },
          "platform": {},
          "gpu": {}
        }
      }
    }
  ],
  "variable": [
    {
      "deploy_id": {
        "type": "string",
        "description": "Domino Deployment ID.",
        "default": "mh1test"
      }
    },
    {
      "region": {
        "type": "string",
        "description": "AWS region for the deployment",
        "default": "us-west-2"
      }
    },
    {
      "tags": {
        "type": "map(string)",
        "description": "Deployment tags.",
        "default": {
          "deploy": "test"
        }
      }
    },
    {
      "k8s_version": {
        "type": "string",
        "description": "EKS cluster k8s version.",
        "default": "1.24"
      }
    }
  ],
  "terraform": [
    {
      "required_version": ">= 1.3.0",
      "required_providers": [
        {
          "aws": {
            "source": "hashicorp/aws",
            "version": ">= 4.0"
          }
        }
      ]
    }
  ],
  "provider": [
    {
      "aws": {
        "alias": "local",
        "region": "${var.region}"
      }
    }
  ],
  "output": [
    {
      "domino_eks": {
        "description": "EKS module outputs",
        "value": "${module.domino_eks}"
      }
    }
  ]
}
